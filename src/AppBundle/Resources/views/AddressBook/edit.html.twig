{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="card o-hidden">
        <div class="card-body">
            <!-- Nested Row within Card Body -->
            <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="  col-lg-7">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">{{ 'header.adddress_form'|trans }}</h1>
                        </div>
                        <form class="user" enctype="multipart/form-data"  method="post" action="{{ object is defined and object.getId() ? path('app_address_book_edit', {id:object.getId()}) : path('app_address_book_create_new') }}">
                            {{ form_errors(form) }}
                            {{ form_row(form._token) }}
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    {{ form_row(form.firstName) }}
                                </div>
                                <div class="col-sm-6">
                                    {{ form_row(form.lastName) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    {{ form_row(form.email) }}
                                </div>
                                <div class="col-sm-3">
                                    {{ form_row(form.phone) }}
                                </div>
                                <div class="col-sm-3">
                                    {{ form_row(form.birthday) }}
                                </div>

                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3 mb-3 mb-sm-0">
                                    {{ form_row(form.streetNumber) }}
                                </div>
                                <div class="col-sm-9">
                                    {{ form_row(form.streetName) }}
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    {{ form_row(form.city) }}
                                </div>
                                <div class="col-sm-3">
                                    {{ form_row(form.country) }}
                                </div>
                                <div class="col-sm-3">
                                    {{ form_row(form.zip) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    {{ form_widget(form.imageFile) }}
                                </div>
                            </div>
                            <div class="row">
                            <button class="btn btn-primary btn-user btn-lg" type="submit">
                                {{ 'form.label.btn_save'|trans }}
                            </button>
                            </div>
                        </form>
                    </div>
        </div>
    </div>

</div>
</div>
<!-- /.container-fluid -->
{% endblock body %}