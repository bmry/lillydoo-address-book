{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">{{ 'header.adddress_form'|trans }}</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class="text-center">
                    <p class="mb-4">{{ 'address.empty.record'|trans }}</p>
                {% if addresses|length == 0 %}
                <a href="{{ path('app_address_book_create_new') }}" class="btn btn-outline-primary btn-icon-split">
                            <span class="icon text-white-50">
                              <i class="fas fa-plus"></i>
                            </span>
                    <span class="text"> {{ 'label.address.create'| trans }}</span>
                </a>
                </div>
                {% else %}
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>{{ 'form.label.first_name'| trans}}</th>
                        <th>{{ 'form.label.last_name'| trans}}</th>
                        <th>{{ 'form.label.phone'| trans}}</th>
                        <th>{{ 'label.address.full_address'| trans}}</th>
                        <th>{{ 'form.label.action'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for address in addresses %}
                    <tr>
                        <td>{{ address.firstName }}</td>
                        <td>{{ address.lastName }}</td>
                        <td>{{ address.phone }}</td>
                        <td>{{ address.streetNumber }},{{ address.streetName }}</td>
                        <td>
                            <a class="btn btn-primary btn-icon-split btn-sm" href="{{ path('app_address_book_view',{'id':address.getId()}) }}">
                                <span class="icon text-white-50">
                                <i class="fas fa-info-circle"></i>
                                </span>
                                <span class="text"> {{ 'label.address.view_details'|trans }}</span>
                            </a>
                            <a class="btn btn-info btn-icon-split btn-sm" href="{{ path('app_address_book_edit',{'id':address.getId()}) }}">
                                <span class="icon text-white-50">
                                <i class="fas fa-edit"></i>
                                </span>
                                <span class="text"> {{ 'label.address.edit'|trans }}</span>
                            </a>

                            <a class="btn btn-danger btn-icon-split btn-sm" id="deleteButton-{{ address.getId() }}" onclick="deleteRecord({{ address.getId() }})" href="#" rel="{{ path('app_address_book_delete',{'id':address.getId()}) }}">

                                <span class="icon text-white-50">
                                <i class="fas fa-trash"></i>
                                </span>
                                <span class="text"> {{ 'label.address.delete'|trans }}</span>
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {% endif %}
            </div>
        </div>
    </div>

</div>
{% endblock body %}